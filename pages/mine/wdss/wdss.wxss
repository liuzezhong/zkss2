/* pages/rank/rank.wxss */
@import '../../../style/weui.wxss';

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 6rpx;
}

.weui-navbar__item.weui-bar__item_on {
  color: #d93a00;
}

.weui-navbar__slider {
  background-color: #d93a00;
}

.match-line {
  height: 200rpx;
  background-color: white;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}

.match-image {
  width: 250rpx;
}

image {
  width: 250rpx;
  height: 200rpx;
}

.match-main {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  width: 470rpx;
  height: 200rpx;
}
.match-title {
 margin-top: 20rpx;
}

.title {
  font-size: 38rpx;
  color: #3D3D3D;
}

.match-cate {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #9E9E9E;
}

.address {
  font-size: 28rpx;
  color: #9E9E9E;
}

.stime {
  font-size: 28rpx;
  color: #9E9E9E;
}

.match-address {
  margin-top: -10rpx;
}

.time {
  color: #e64340;
}